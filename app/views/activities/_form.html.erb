  <label for="activity[event_date]" class="sr-only">Data</label>
  <div class="input-group datepicker">
    <input id="calendario" name="activity[event_date]" type="text" class="form-control date-mask" placeholder="dd/mm/aaaa">
  </div>


  <div class="form-actions btn btn-success mb-2 p-0">
    <%= f.button :submit %>
  </div>
<% end %>
