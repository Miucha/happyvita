<%= simple_form_for(@activity) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
        <%= f.input :title, label: "Nome da atividade:" %>
    </div>

    <div class="form-inputs">
        <%= f.input :description, label: "Descrição:" %>
    </div>

    <div class="form-inputs">
        <%= f.input :address, label: "Local:" %>
    </div>

    <div class="form-inputs">
        <%= f.input :capacity, input_html: { min: '1', step: 'any'}, label: "Capacidade do evento:" %>
    </div>

    <div class="form-inputs">
        <%= f.input :event_date, label: "Data do evento:" %>
    </div>

    <div class="form-actions btn btn-success mb-2 p-0">
        <%= f.button :submit %>
    </div>
<% end %>
