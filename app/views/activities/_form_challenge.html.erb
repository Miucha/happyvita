<%= simple_form_for(@activity) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
 
  <%= f.hidden_field :event, value: '0'%>

  <p>Todos os campos são obrigatórios:</p><br>

  <div class="form-inputs">
    <%= f.input :title, label: "Nome do Desafio:" %>
  </div>

  <div class="form-inputs">
    <%= f.input :description, label: "Descrição:" %>
  </div>

  <div class="form-inputs">
    <%= f.input :group, label: "Atividade é em grupo?" %>
  </div>

  <div>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

<!--   colocar em java opção de address também
  colocar photo -->

<br>
  <div class="form-actions btn btn-success mb-2 p-0">
    <%= f.button :submit %>
  </div>
<% end %>
