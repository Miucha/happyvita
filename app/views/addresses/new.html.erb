<div class="row justify-content-center pb-5">
  <div class=" col-10">
    <h1> Novo endereço </h1>
    <%= simple_form_for (@address)do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :street, label: "Endereço:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :number, label: "Número:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :suite, label: "Complemento:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :zipcode, label: "CEP:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :district, label: "Bairro:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :city, label: "Cidade:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :state, label: "Estado:" %>
      </div>


      <div class="form-actions btn btn-success mb-2 p-0">
        <%= f.button :submit %>
      </div>

    <% end %>
  </div>
</div>
